<Page
    x:Class="IPOkemon.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IPOkemon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
            <Button x:ConnectionId='9' x:Name="btnMenu" Margin="4,0,256,0" HorizontalAlignment="Stretch"                      >
                <FontIcon Foreground="Black" Glyph="&#xE700;"
                FontFamily="Segoe MDL2 Assets" />
            </Button>
        </Border>
        <SplitView x:ConnectionId='2' x:Name="sView" IsPaneOpen="True" DisplayMode="CompactInline" CompactPaneLength="30" Grid.ColumnSpan="2" Grid.Row="1" OpenPaneLength="299">
            <SplitView.Pane>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <SymbolIcon Grid.Row="0" Margin="4" Symbol="Home"/>
                    <SymbolIcon Grid.Row="1" Margin="4" Symbol="Pictures"/>
                    <SymbolIcon Grid.Row="2" Margin="4" Symbol="Pictures"/>
                    <SymbolIcon Grid.Row="3" Margin="4" Symbol="People"/>
                    <SymbolIcon Grid.Row="4" Margin="4" Symbol="Help"/>

                    <Button x:ConnectionId='4' x:Uid="TransInicio" x:Name="btnInicio" Content="Inicio" Height="50"
            Background="{x:Null}" FontSize="20" FontWeight="Bold"
            BorderBrush="{x:Null}"                         Width="269" Grid.Column="1" HorizontalAlignment="Center"/>

                    <Button x:ConnectionId='5' x:Name="btnMisPokemon" Grid.Row="1" Grid.Column="1" Content="MisPokemon" Height="50" Background="{x:Null}"
            FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" BorderBrush="{x:Null}"                             Width="269"/>

                    <Button x:ConnectionId='6' x:Name="btnPokedex" Grid.Row="2" Grid.Column="1" Content="PokeDex" Height="50" Background="{x:Null}"
            FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" BorderBrush="{x:Null}"                          Width="269"/>

                    <Button x:ConnectionId='7' x:Uid="TransCombate" x:Name="btnCombate" Grid.Row="3" Grid.Column="1" Content="Combate" Height="50" Background="{x:Null}"
            FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" BorderBrush="{x:Null}"                          Width="269"/>

            
                    <Button x:ConnectionId='8' x:Name="btnAcercaDe" x:Uid="TransAcercaDe" Grid.Row="4" Grid.Column="1" Content="Acerca De" Height="50" Background="{x:Null}"
            FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" BorderBrush="{x:Null}" Width="269"                          />

                </Grid>
            </SplitView.Pane>
        </SplitView>
        <StackPanel Grid.Row="1"/>
        <Frame x:ConnectionId='3' x:Name="fmMain" Grid.Column="1" Grid.Row="1"/>

        <Grid Grid.ColumnSpan="2" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="485*"/>
            </Grid.ColumnDefinitions>
        </Grid>


    </Grid>
</Page>

