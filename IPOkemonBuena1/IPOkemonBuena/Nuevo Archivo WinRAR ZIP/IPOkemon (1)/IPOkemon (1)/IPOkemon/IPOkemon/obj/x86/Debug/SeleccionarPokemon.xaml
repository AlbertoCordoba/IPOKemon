            <Border x:ConnectionId='23' x:Name="borderCharizardP2" Grid.Row="2" Grid.Column="0" Margin="10,10,10,10" Background="Transparent">
                <Button x:ConnectionId='24' x:Name="btnCharizardP2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                             >
                    <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <local:CharizardASM x:ConnectionId='25' x:Name="CharizardControl1" Margin="160" RenderTransformOrigin="0.5,0.5">
                            <local:CharizardASM.RenderTransform>
