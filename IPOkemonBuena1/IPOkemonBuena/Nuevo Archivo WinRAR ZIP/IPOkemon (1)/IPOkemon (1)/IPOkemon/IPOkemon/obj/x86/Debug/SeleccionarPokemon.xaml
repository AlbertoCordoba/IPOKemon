                    <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch">
                        <local:PiplupMLTN x:ConnectionId='73' x:Name="PiplupControl" Width="1200" Height="1200" Margin="-80,0,0,0" />
                    </Viewbox>
                </Button>
            </Border>
            
            <Border x:ConnectionId='54' x:Name="borderChandelureP1" Grid.Row="2" Grid.Column="0" Margin="10,10,10,10" Background="Transparent">
