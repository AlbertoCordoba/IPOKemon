                <Button x:ConnectionId='26' x:Name="btnPiplupP2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                          >
                    <Viewbox Stretch="Uniform" HorizontalAlignment="Center">
                        <local:PiplupMLTN x:ConnectionId='27' x:Name="PiplupControl1" Width="1200" Height="1200"/>
                    </Viewbox>
