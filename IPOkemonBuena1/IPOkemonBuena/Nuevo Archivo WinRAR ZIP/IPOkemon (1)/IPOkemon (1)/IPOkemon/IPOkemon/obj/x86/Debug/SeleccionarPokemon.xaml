        <!-- FlipView para el Jugador 2 -->
        <FlipView x:ConnectionId='6' x:Name="flipViewJugador2" Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="2" Margin="10,10,10,10">

            <Border x:ConnectionId='12' x:Name="borderAronP2" Grid.Row="2" Grid.Column="0" Margin="10,10,10,10" Background="Transparent">
                <Button x:ConnectionId='46' x:Name="btnAronP2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                        >
                    <Viewbox Stretch="Uniform">
