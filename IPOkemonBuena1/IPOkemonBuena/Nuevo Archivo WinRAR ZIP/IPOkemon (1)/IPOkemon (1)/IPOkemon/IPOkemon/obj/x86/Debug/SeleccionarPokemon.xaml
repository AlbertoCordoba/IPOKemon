                    <Viewbox Stretch="UniformToFill" HorizontalAlignment="Center">
                        <local:DracofireGDLRS x:ConnectionId='81' x:Name="DracoControl"/>
                    </Viewbox>
                </Button>
            </Border>

            <Border x:ConnectionId='50' x:Name="borderMakuhitaP1" Grid.Row="2" Grid.Column="0" Margin="10,10,10,10" Background="Transparent">
