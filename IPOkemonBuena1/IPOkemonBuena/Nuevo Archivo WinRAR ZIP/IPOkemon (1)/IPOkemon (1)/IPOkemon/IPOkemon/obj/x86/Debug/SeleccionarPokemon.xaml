                    </Viewbox>
                </Button>
            </Border>


            <Border x:ConnectionId='58' x:Name="borderArticunoP1" Grid.Row="2" Grid.Column="0" Margin="10,10,10,10" Background="Transparent">
                <Button x:ConnectionId='62' x:Name="btnArticunoP1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                            >
                    <Viewbox Stretch="Uniform">
