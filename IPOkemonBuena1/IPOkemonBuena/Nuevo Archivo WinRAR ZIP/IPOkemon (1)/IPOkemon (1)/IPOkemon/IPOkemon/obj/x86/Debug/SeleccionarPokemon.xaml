        <Border x:ConnectionId='7' x:Name="brdJugador1" BorderBrush="Black" BorderThickness="1" Grid.Row="1" Background="#FFE0CECE" Grid.ColumnSpan="2" Margin="80,15,80,15">
            <Viewbox>
