            </Viewbox>
        </Border>

        <Border x:ConnectionId='8' x:Name="brdJugador2" BorderBrush="Black" BorderThickness="1" Grid.Row="1" Background="#FFE0CECE" Grid.ColumnSpan="2" Margin="80,15,80,15" Grid.Column="2">
