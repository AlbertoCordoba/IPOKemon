            <Image Source="/Assets/flecha-atras.png"/>
        </Button>
        <FlipView x:ConnectionId='5' x:Name="flipViewJugador1" Grid.Row="2" Grid.ColumnSpan="2" Margin="10,10,10,10">


            <Border x:ConnectionId='48' x:Name="borderCharizardP1" Grid.Row="2" Grid.Column="0" Margin="10,10,10,10" Background="Transparent">
                <Button x:ConnectionId='82' x:Name="btnCharizardP1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                             >
                    <Viewbox Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
