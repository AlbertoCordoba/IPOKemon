                    <Viewbox Stretch="Uniform" HorizontalAlignment="Center">
                        <local:GengarJCC x:ConnectionId='77' x:Name="GengarControl" RenderTransformOrigin="0.5,0.5">
                            <local:GengarJCC.RenderTransform>
                                <ScaleTransform ScaleX="-1"/>
                            </local:GengarJCC.RenderTransform>
                        </local:GengarJCC>
                    </Viewbox>
                </Button>
            </Border>
            
            <Border x:ConnectionId='52' x:Name="borderDragoniteeP1" Grid.Row="2" Grid.Column="0" Margin="10,10,10,10" Background="Transparent">
